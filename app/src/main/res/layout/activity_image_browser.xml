<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="org.wdd.app.android.seedoctor.ui.gallery.activity.ImageBrowserActivity">

    <TextView
        android:id="@+id/activity_image_browser_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeItemTitle"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:fitsSystemWindows="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_image_browser_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
