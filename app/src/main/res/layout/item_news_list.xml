<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_news_list_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/common_list_item_bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:clickable="true">

    <org.wdd.app.android.seedoctor.views.NetworkImageView
        android:id="@+id/item_news_list_img"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/item_news_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="@dimen/textSizeItemTitle"
            android:textColor="#323232"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/item_news_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeItemExtra"
                android:layout_marginRight="10dp"
                android:textColor="#c2c2c2"/>

            <TextView
                android:id="@+id/item_news_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeItemExtra"
                android:textColor="#c2c2c2"/>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>