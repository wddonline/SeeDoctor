<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_favorites_hospital_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_favorites_hospital_drawer"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_favorites_hospital_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_favorites_hospital_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/common_list_item_bg"
        android:clickable="true">

        <CheckBox
            android:id="@+id/item_favorites_hospital_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:clickable="false"
            android:visibility="gone"/>

        <org.wdd.app.android.seedoctor.views.NetworkImageView
            android:id="@+id/item_favorites_hospital_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_favorites_hospital_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textColor="@color/colorItemTitle"
            android:textSize="@dimen/textSizeItemTitle"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp"/>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>