<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_disease_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.wdd.app.android.seedoctor.ui.encyclopedia.activity.DiseaseDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_disease_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarSize"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/activity_disease_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wiki_disease"
                android:layout_gravity="center"
                android:textSize="@dimen/textSizeToolbarTitle"
                android:textColor="@color/colorToolbarTitle"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <org.wdd.app.android.seedoctor.views.LoadView
        android:id="@+id/activity_disease_detail_loadview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/activity_disease_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/activity_disease_detail_brief_intro_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_list_item_bg"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/activity_disease_detail_brief_intro_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:button="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/disease_detail_text_color"
                    android:text="@string/disease_brief_introduction"/>

                <ImageView
                    android:id="@+id/activity_disease_detail_brief_intro_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right|center_vertical"/>

            </FrameLayout>

            <TextView
                android:id="@+id/activity_disease_detail_brief_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#979797"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/activity_disease_detail_pathogeny_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_list_item_bg"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/activity_disease_detail_pathogeny_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:button="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/disease_detail_text_color"
                    android:text="@string/disease_pathogeny"/>

                <ImageView
                    android:id="@+id/activity_disease_detail_pathogeny_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right|center_vertical"/>

            </FrameLayout>

            <TextView
                android:id="@+id/activity_disease_detail_pathogeny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#979797"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/activity_disease_detail_symptom_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_list_item_bg"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/activity_disease_detail_symptom_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:button="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/disease_detail_text_color"
                    android:text="@string/disease_symptom"/>

                <ImageView
                    android:id="@+id/activity_disease_detail_symptom_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right|center_vertical"/>

            </FrameLayout>

            <TextView
                android:id="@+id/activity_disease_detail_symptom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#979797"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/activity_disease_detail_check_method_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_list_item_bg"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/activity_disease_detail_check_method_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:button="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/disease_detail_text_color"
                    android:text="@string/disease_check_method"/>

                <ImageView
                    android:id="@+id/activity_disease_detail_check_method_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right|center_vertical"/>

            </FrameLayout>

            <TextView
                android:id="@+id/activity_disease_detail_check_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#979797"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/activity_disease_detail_distinguish_method_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_list_item_bg"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/activity_disease_detail_distinguish_method_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:button="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/disease_detail_text_color"
                    android:text="@string/disease_distinguish_method"/>

                <ImageView
                    android:id="@+id/activity_disease_detail_distinguish_method_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right|center_vertical"/>

            </FrameLayout>

            <TextView
                android:id="@+id/activity_disease_detail_distinguish_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#979797"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/activity_disease_detail_complication_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_list_item_bg"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/activity_disease_detail_complication_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:button="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/disease_detail_text_color"
                    android:text="@string/disease_complication"/>

                <ImageView
                    android:id="@+id/activity_disease_detail_complication_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right|center_vertical"/>

            </FrameLayout>

            <TextView
                android:id="@+id/activity_disease_detail_complication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#979797"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/activity_disease_detail_prevention_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_list_item_bg"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/activity_disease_detail_prevention_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:button="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/disease_detail_text_color"
                    android:text="@string/disease_prevention"/>

                <ImageView
                    android:id="@+id/activity_disease_detail_prevention_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right|center_vertical"/>

            </FrameLayout>

            <TextView
                android:id="@+id/activity_disease_detail_prevention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#979797"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/activity_disease_detail_treatment_method_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_list_item_bg"
                android:clickable="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/activity_disease_detail_treatment_method_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:button="@null"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/textSizeItemTitle"
                    android:textColor="@color/disease_detail_text_color"
                    android:text="@string/disease_treatment_method"/>

                <ImageView
                    android:id="@+id/activity_disease_detail_treatment_method_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="right|center_vertical"/>

            </FrameLayout>

            <TextView
                android:id="@+id/activity_disease_detail_treatment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#979797"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
