<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.wdd.app.android.seedoctor.ui.search.activity.DiseaseSearchActivity">

    <FrameLayout
        android:id="@+id/activity_disease_search_input_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="#dedede">

        <EditText
            android:id="@+id/activity_disease_search_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:paddingLeft="28dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/textSizeItemTitle"
            android:hint="@string/disease_search_hint"
            android:background="@drawable/shape_white_input_bg"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_gray_search"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center_vertical"/>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_disease_search_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

